{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "QuizeSCH Quiz File Schema",
  "description": "A schema for a single quiz file, containing metadata (tags) and an array of questions.",
  "type": "object",
  "properties": {
    "tags": {
      "type": "object",
      "description": "Metadata tags for the quiz.",
      "properties": {
        "subject": { "type": "string" },
        "type": { "type": "string" },
        "year": { "type": "string" }
      },
      "required": ["subject", "type", "year"]
    },
    "questions": {
      "description": "An array of questions, where each question can be one of three types: multi_choice, drag_n_drop, or fill_the_blanks.",
      "type": "array",
      "items": {
        "oneOf": [
          {
            "title": "Multiple Choice Question",
            "type": "object",
            "properties": {
              "question_type": { "const": "multi_choice" },
              "question_title": { "type": "string" },
              "options": {
                "type": "object",
                "additionalProperties": { "type": "string" }
              },
              "answer": { "type": "array", "items": { "type": "string" } },
              "ID": { "type": "integer" },
              "supervised": { "type": "string" }
            },
            "required": ["question_type", "question_title", "options", "answer", "ID"]
          },
          {
            "title": "Drag and Drop Question",
            "type": "object",
            "properties": {
              "question_type": { "const": "drag_n_drop" },
              "choices": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "identifier": { "type": "string" },
                    "label": { "type": "string" }
                  },
                  "required": ["identifier", "label"]
                }
              },
              "text": { "type": "string" },
              "ID": { "type": "integer" },
              "supervised": { "type": "string" }
            },
            "required": ["question_type", "choices", "text", "ID"]
          },
          {
            "title": "Fill the Blanks Question",
            "type": "object",
            "properties": {
              "question_type": { "const": "fill_the_blanks" },
              "text": { "type": "string" },
              "blank": {
                "oneOf": [
                  {
                    "type": "object",
                    "properties": {
                      "identifier": { "type": "string" },
                      "answer": { "type": "string" }
                    },
                    "required": ["identifier", "answer"]
                  },
                  {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "identifier": { "type": "string" },
                        "answer": { "type": "string" }
                      },
                      "required": ["identifier", "answer"]
                    }
                  }
                ]
              },
              "ID": { "type": "integer" },
              "supervised": { "type": "string" }
            },
            "required": ["question_type", "text", "blank", "ID"]
          }
        ]
      }
    }
  },
  "required": ["tags", "questions"]
}